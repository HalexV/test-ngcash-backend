{
  "name": "test-ngcash-backend",
  "version": "0.0.1",
  "description": "backend test for job application at NG.CASH",
  "main": "index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.prod.json",
    "start:dev": "npx prisma migrate dev && ts-node-dev --respawn --transpile-only src/server.ts",
    "start:prod": "npx prisma migrate deploy && node src/server.js",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:unit": "npm run test -- --watchAll --verbose -c jest-unit-config.ts",
    "test:integration": "npx prisma migrate deploy && npm run test -- --watchAll --verbose -c jest-integration-config.ts",
    "test:e2e": "npx prisma migrate deploy && npm run test -- --watchAll --verbose -c jest-e2e-config.ts",
    "test:staged": "npm run test -- --findRelatedTests -c jest-unit-config.ts",
    "test:coverage": "npx prisma migrate deploy && npm run test -- --coverage -c jest-coverage-config.ts",
    "docker:up:test:unit": "docker-compose -f docker-envs/watch-unit-tests/docker-compose.yml up -d --build",
    "docker:down:test:unit": "docker-compose -f docker-envs/watch-unit-tests/docker-compose.yml down",
    "docker:up:test:integration": "docker compose -f docker-envs/watch-integration-tests/docker-compose.yml up -d --build",
    "docker:down:test:integration": "docker compose -f docker-envs/watch-integration-tests/docker-compose.yml down",
    "docker:up:test:e2e": "docker compose -f docker-envs/watch-e2e-tests/docker-compose.yml up -d --build",
    "docker:down:test:e2e": "docker compose -f docker-envs/watch-e2e-tests/docker-compose.yml down",
    "docker:up:coverage": "rimraf coverage && mkdir coverage && docker compose -f docker-envs/coverage/docker-compose.yml up --abort-on-container-exit --build",
    "docker:down:coverage": "docker compose -f docker-envs/coverage/docker-compose.yml down",
    "docker:up:start:dev": "docker compose -f docker-envs/start-dev/docker-compose.yml up -d --build",
    "docker:down:start:dev": "docker compose -f docker-envs/start-dev/docker-compose.yml down",
    "docker:up:start:prod": "npm run build && docker-compose -f docker-envs/start-prod/docker-compose.yml up -d --build",
    "docker:down:start:prod": "docker-compose -f docker-envs/start-prod/docker-compose.yml down",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HalexV/test-ngcash-backend.git"
  },
  "keywords": [],
  "author": "HÃ¡lex Viotto Gomes",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/HalexV/test-ngcash-backend/issues"
  },
  "homepage": "https://github.com/HalexV/test-ngcash-backend#readme",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.14",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.7.14",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^22.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.5",
    "eslint-plugin-promise": "^6.0.1",
    "git-commit-msg-linter": "^4.1.3",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "prisma": "^4.6.1",
    "supertest": "^6.3.1",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.2"
  },
  "dependencies": {
    "@prisma/client": "^4.6.1",
    "bcrypt": "^5.1.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^8.5.1"
  }
}
